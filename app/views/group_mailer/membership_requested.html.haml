.invite-people-mailer__context
  %strong= @membership_request.name
  %span="(#{@membership_request.email})"
  = t(:"email.membership_request.intro_html")
.invite-people-mailer__body--center-text
  - if @introduction
    .invite-people-mailer__message_body
      = simple_format @introduction
  = link_to t(:"email.membership_request.button_text"), group_membership_requests_url(@group, @utm_hash), class: "base-mailer__button base-mailer__button--accent"
.invite-people-mailer__value-proposition
  = t(:"email.value_proposition", site_name: AppConfig.theme[:site_name])
